.height-enter
  height 0
  overflow hidden
  animation-duration 0.5s
  animation-fill-mode both
  animation-timing-function cubic-bezier(0.55, 0, 0.55, 0.2)
  animation-play-state paused
.height-appear
  opacity 0
  animation-duration 0.5s
  animation-fill-mode both
  animation-timing-function cubic-bezier(0.55, 0, 0.55, 0.2)
  animation-play-state paused
.height-leave
  animation-duration 0.5s
  animation-fill-mode both
  animation-timing-function cubic-bezier(0.55, 0, 0.55, 0.2)
  animation-play-state paused
.height-enter.height-enter-active
  animation-name fadeIn
  animation-play-state running
.height-appear.height-appear-active
  animation-name fadeIn
  animation-play-state running
.height-leave.height-leave-active
  animation-name fadeOut
  animation-play-state running
@keyframes fadeIn
  0%
    height 0
  100%
    height 92px
@keyframes fadeOut
  0%
    height 92px
  100%
    height 0