.search-component
  .search-component-container
    display flex
    flex-flow row wrap
    justify-content flex-end
    align-items center
    .fuzzy-search
      display inline-block
      .fuzzy-search-content
        .ant-input
          &:hover
            border-color #00c1de
            &+.ant-input-suffix
              .ant-btn-primary
                border-color #00c1de
        .ant-btn-primary
          background-color #f5f5f5
          border-color #d9d9d9
          &:hover
            border-color #00c1de
            background-color rgba(245, 245, 245, 0.4)
    .advanced-search-name
      color #008eed
      display inline-block
      font-size 13px
      font-weight bold
      text-decoration underline
      margin-left 23px
      cursor pointer
      user-select none
      &:hover
        color #036bb1
  .advanced-search-main
    // overflow hidden
    .advanced-search-container
      .ant-tabs-tab
        margin-right 0
      .ant-tabs-bar
        border-bottom none
        .ant-tabs-ink-bar
          display none !important
      .advanced-search-content
        .advanced-search-select
          display flex
          flex-flow row wrap
          justify-content space-between
          align-items center
          .advanced-search-select-container
            display inline-block
            flex 1 1 auto
            .advanced-search-select-content
              .ant-select-selection
                &:hover, &:focus, &:active
                  border-color #00c1de
          .advanced-search-btn
            margin-left 14px
            background-color #00c1de
            border-color #00c1de
            &:hover
              opacity 0.7
